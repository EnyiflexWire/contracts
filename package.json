{
  "name": "beta-contracts",
  "version": "1.0.0",
  "repository": "github:ethereumfollowprotocol/beta-contractst",
  "type": "module",
  "scripts": {
    "build": "wagmi generate && cp ./generated/abi.ts ../indexer/src/abi/generated/index.ts",
    "clean": "forge clean",
    "deploy:localhost": "forge script scripts/deploy.s.sol --fork-url ${ETHEREUM_LOCAL_NODE_URL:-http://localhost:8545} --broadcast --private-key ${PRIVATE_KEY}",
    "format:sol": "bunx prettier --config .prettierrc --write 'scripts/**/*.sol' 'src/**/*.sol' 'test/**/*.sol'",
    "format:ts": "prettier --config .prettierrc --write ./scripts/**/*.ts wagmi.config.ts",
    "format": "bun format:ts && bun format:sol",
    "launch:localhost": "bun deploy:localhost && bun mint:localhost",
    "lint": "bun lint:ts && bun lint:sol",
    "lint:sol": "solhint 'scripts/**/*.sol' 'src/**/*.sol'",
    "lint:ts": "oxlint --import-plugin --ignore-path='.eslintignore' --fix .",
    "mint:localhost": "forge script scripts/mint.s.sol --fork-url ${ETHEREUM_LOCAL_NODE_URL:-http://localhost:8545} --broadcast --private-key ${PRIVATE_KEY}"
  },
  "dependencies": {
    "viem": "2.0.0-rc.2",
    "@wagmi/cli": "2.0.0-rc.1",
    "wagmi": "2.0.0-rc.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "bun": "^1.0.20",
    "@types/bun": "^1.0.0",
    "oxlint": "^0.0.22",
    "prettier": "^3.1.1",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^4.0.0",
    "typescript": "^5.3.3"
  },
  "license": "UNLICENSED"
}
